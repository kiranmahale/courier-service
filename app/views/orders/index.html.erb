<div class="" style="width: 100%;">
  <br />
  <br />
  <h3 class="d-inline-block">List Of Orders</h3>
  <a class="btn btn-primary float-right d-inline-block" href="<%= new_order_path %>" role="button">New Order</a>
  <table id="example" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
      <th>Number</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Service Type</th>
      <th>Weight</th>
      <th>Cost</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.parcel_number %></td>
          <td><%= order.sender.full_name %></td>
          <td><%= order.recipient.full_name %></td>
          <td><%= order.service_type %></td>
          <td><%= order.weight %></td>
          <td><%= order.cost %></td>
          <td>
            <%= link_to "Delete", order_path(order), :remote => true, :method => :delete, data: {confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_order_path(order) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
  });
</script>