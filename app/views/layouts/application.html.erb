<!DOCTYPE html>
<html>
  <head>
    <title>CourierServices</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-dark bg-primary navbar-fixed-top">
      <a class="navbar-brand" href="#">Courier Services</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
          <% if current_admin %>
          <li class="nav-item active">
            <%= link_to "Sign out", destroy_admin_session_path, :method => :delete, class: "nav-link" %>
          </li>
          <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_admin_session_path %>">Sign In</a>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
